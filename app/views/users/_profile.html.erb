<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="col-md-4">
        <%= image_tag attachment_url(user, :profile_image, :fill, 200, 200), class: 'img-circle' %>
      </div>

      <div class="col-md-8">
        <h2><%= user.name %></h2>
        <h5><%= user.email %></h5>

        <ul class="list-inline">
          <li>Followers</li>
          <li>Following</li>
          <li>Posts</li>
        </ul>
      </div>
    </div>
  </div>
</div>
