<div class="container">
  <%= render partial: 'profile',
           locals: { user: current_user }
  %>

  <div class="col-md-6 col-md-offset-3">
    <%= render partial: 'posts/form' %>
  </div>

  <div class="clearfix"></div>

  <% unless @posts.empty? %>
    <div class="col-md-6 col-md-offset-3">
      <h3 class="text-center">User posts</h3>

      <% @posts.each do |post| %>
        <%= render partial: 'posts/post',
                   locals: { user: current_user,
                             post: post
                           }
        %>
      <% end %>
    </div>
  <% end %>
</div>
