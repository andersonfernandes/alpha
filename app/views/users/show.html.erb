<div class="container">
  <%= render partial: 'profile',
           locals: { user: @user }
  %>

  <div class="clearfix"></div>

  <div class="col-md-6 col-md-offset-3">
    <h3 class="text-center">User posts</h3>

    <% @posts.each do |post| %>
      <%= render partial: 'posts/post',
                 locals: { user: @user,
                           post: post
                         }
      %>
    <% end %>
  </div>
</div>
